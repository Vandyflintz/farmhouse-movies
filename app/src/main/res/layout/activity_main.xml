<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/felixmoon"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/ptitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FarmHouse Movies"
        android:textColor="#fff"
        android:textAlignment="center"
        android:layout_marginTop="45dp"
        android:textSize="22sp"
        android:layout_marginStart="-5dp"
        android:drawableLeft="@drawable/drawicon"
        android:textFontWeight="400"
        android:fontFamily="serif"
        android:textStyle="italic"/>




    <ImageView
        android:id="@+id/mainlogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/tvstand"
        android:layout_gravity="center"
        android:layout_marginStart="100dp"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="0dp"
        android:background="@android:color/transparent"
        android:src="@drawable/logo_red"
        android:elevation="70dp"
        android:translationZ="70dp"/>

    <ImageView
        android:id="@+id/tvstand"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:translationZ="50dp"
        android:src="@drawable/tv" />


    <ViewFlipper
        android:layout_width="256dp"
        android:layout_height="165dp"
        android:layout_alignStart="@+id/tvstand"
        android:layout_alignTop="@+id/tvstand"
        android:layout_marginStart="22dp"
        android:layout_marginTop="5dp"
        android:translationZ="60dp"
        android:id="@+id/imgframe"
        android:background="#000"></ViewFlipper>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#201F1F"
        android:layout_marginTop="260dp"/>


    <TextView
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textFontWeight="400"
        android:textSize="18sp"
        android:textColor="#fff"
        android:textAlignment="center"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:textStyle="italic"
        android:text="Watch tons of your favourite movies and series ðŸ˜Ž "/>



    <ProgressBar
        android:id="@+id/pBar"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:indeterminateDrawable="@drawable/progresscss"
        android:layout_marginBottom="82dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="101dp">
        <TextView
            android:id="@+id/timetext"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginBottom="82dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/circlecss"
            android:layout_gravity="center_horizontal"
            android:text=""
            android:textColor="#fff"
            android:textAlignment="center"
            android:fontFamily="sans-serif"
            android:textSize="23sp"
            android:textStyle="bold"
            android:paddingTop="15dp"/>

    </GridLayout>

</RelativeLayout>