<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FullscreenMode">

    <VideoView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fullsv"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/conpanel"
        android:background="#54000000"
        android:translationZ="170dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The Wedding Party"
            android:textSize="19sp"
            android:textColor="#fff"
            android:padding="5dp"
            android:id="@+id/dtitle"
            android:layout_alignParentTop="true"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/playpause"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/play_btn"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekcon"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="2dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:textColor="#fff"
            android:text="00:00"
            android:textSize="@dimen/title"
            android:id="@+id/dstarttime"
            />
        <SeekBar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/dseekbar"
            android:layout_weight="1"
            android:layout_marginTop="2dp"  />

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="00:00"
            android:textSize="@dimen/title"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:id="@+id/dendtime"
            />
        <Button

            android:layout_height="25dp"
            android:layout_width="25dp"
            android:background="@drawable/exitmagnify_btn"
            android:id="@+id/dmagbtn"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            />
    </LinearLayout>
    </RelativeLayout>
</RelativeLayout>