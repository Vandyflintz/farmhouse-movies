<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/felixmoon"
    android:backgroundTint="#D50A0404"
    android:backgroundTintMode="src_atop">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="3"
        android:id="@+id/rated"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="10dp"
            android:background="?android:selectableItemBackground"
            android:fontFamily="sans-serif"
            android:text=""
            android:textColor="#fff"
            android:textSize="36sp"
            android:textStyle="bold"
            android:layout_rowSpan="1"
            android:layout_gravity="center"
            android:layout_columnSpan="1"
            />


        <com.taufiqrahman.reviewratings.RatingReviews
            xmlns:bar="http://schemas.android.com/apk/res-auto"
            android:id="@+id/rating_reviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="4dp"
            android:layout_columnSpan="1"
            android:layout_rowSpan="3"
            android:layout_columnWeight="1"
            bar:animation="true"
            bar:max_value="100"
            bar:show_label="true"
            bar:show_raters="false"
            bar:spaces="7dp"
            bar:text_color="#fff"
            bar:text_size="10sp"
            bar:rounded="true"
            bar:width="12dp"
            android:layout_gravity="fill"
            />


        <RatingBar
            android:id="@+id/ratingBar"
            style="@android:style/Widget.Material.Light.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:backgroundTint="#35493F"
            android:stepSize="0.5"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:text=""
            android:textColor="#fff"
            android:textSize="12sp"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp" />


        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/rating_bar"
            android:progressTint="#0f9d58"
            android:layout_columnSpan="2"
            android:stepSize="0.5"
            android:numStars="5"
            android:rating="0"
            android:theme="@style/RatingBar"
            android:isIndicator="false"
            android:layout_marginTop="13dp"
            style="@android:style/Widget.Material.Light.RatingBar.Indicator"
            android:background="#0DFFFFFF"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="#2FFFFFFF"
            android:layout_columnSpan="2"
            android:textColor="#fff"
            android:textSize="14sp"
            android:id="@+id/txtuserrating"/>

        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/ratingsubmitbtn"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_columnSpan="2"
            android:src="@drawable/ic_more"
            android:id="@+id/morebtn"
            android:visibility="gone"
            />

    </GridLayout>



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible">

        <TextView
            android:id="@+id/overall"
            android:layout_width="1dp"
            android:layout_height="1dp"
            />
        <TextView
            android:id="@+id/totalgot"
            android:layout_width="1dp"
            android:layout_height="1dp"
            />

        <TextView
            android:id="@+id/fivestar"
            android:layout_width="1dp"
            android:layout_height="1dp"
            />
        <TextView
            android:id="@+id/fourstar"
            android:layout_width="1dp"
            android:layout_height="1dp"
            />

        <TextView
            android:id="@+id/threestar"
            android:layout_width="1dp"
            android:layout_height="1dp"
            />
        <TextView
            android:id="@+id/twostar"
            android:layout_width="1dp"
            android:layout_height="1dp"
            />

        <TextView
            android:id="@+id/onestar"
            android:layout_width="1dp"
            android:layout_height="1dp"
            />
        <TextView
            android:id="@+id/userstar"
            android:layout_width="1dp"
            android:layout_height="1dp"
            />

        <TextView
        android:id="@+id/datestar"
        android:layout_width="1dp"
        android:layout_height="1dp"
        />

        <TextView
            android:id="@+id/mtype"
            android:layout_width="1dp"
            android:layout_height="1dp"
            />
    </RelativeLayout>

</RelativeLayout>