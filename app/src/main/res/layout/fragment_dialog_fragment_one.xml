<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dfo"
    android:alignmentMode="alignBounds"
    android:orientation="vertical"
    android:columnCount="2"
    android:columnOrderPreserved="false"
    android:padding="20dp"
    tools:context=".DialogFragmentOne">


    <GridLayout
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/commentpanel"
        android:padding="10dp"
        android:columnCount="2"
        android:rowCount="3"
        android:background="#C6000000"
        android:layout_marginTop="40dp"

        >

        <com.vandyflintz.farmhousemovies.MaxHeightRelativeLayout
            android:layout_columnSpan="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_rowSpan="1"
            app:maxHeightDP="191"
            android:id="@+id/listnamescon"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:background="@drawable/listbgone">
            <ListView
                android:id="@+id/listnames"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:divider="@color/list_divider"
                android:dividerHeight="1dp"
                />
        </com.vandyflintz.farmhousemovies.MaxHeightRelativeLayout>



            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/comment"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:focusable="true"
                android:padding="5dp"
                android:textColorHint="#e2615e5e"
                android:textSize="14sp"
                android:hint="Enter Comment Here"
                android:background="@drawable/bordercss"
                android:textCursorDrawable="@drawable/cursorcss"
                android:layout_columnSpan="2"
                android:layout_rowSpan="1"
                />

            <Button
                android:background="@drawable/btncss2"
                android:layout_columnSpan="1"
                android:layout_marginRight="50dp"
                android:layout_height="33dp"
                android:layout_width="wrap_content"
                android:text="Done"
                android:id="@+id/sendcomment"
                android:layout_marginTop="24dp"
                android:textColor="#fff"
                android:layout_columnWeight="0.5"
                />

    <Button
        android:background="@drawable/btncss3"
        android:layout_columnSpan="1"
        android:layout_height="33dp"
        android:layout_width="wrap_content"
        android:text="Cancel"
        android:id="@+id/cancelcomment"
        android:layout_marginTop="24dp"
        android:textColor="#fff"
        android:layout_columnWeight="0.5"
        />



    </GridLayout>

        </RelativeLayout>


