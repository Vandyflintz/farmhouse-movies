<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_row_selector"
    android:padding="7dp"
    >




    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/mthumbnail"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mtitle"
        android:layout_alignTop="@+id/mthumbnail"
        android:layout_toRightOf="@+id/mthumbnail"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="7dp"
        android:textColor="#B71C1C"
        android:layout_marginEnd="40dp"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:textSize="@dimen/title"/>

    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:drawableStart="@drawable/ic_money"
        android:id="@+id/paidbtn"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="22dp"
        android:background="#00000000"
        android:layout_marginEnd="-4dp"/>

    <TextView
        android:id="@+id/duration"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mtitle"
        android:layout_toRightOf="@+id/mthumbnail"
        android:layout_marginTop="1dip"
        android:textColor="@color/year"
        android:textSize="@dimen/year"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:textColor="#00000000"
        android:id="@+id/mfile"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:textColor="#00000000"
        android:id="@+id/mmid"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:textColor="#00000000"
        android:id="@+id/mdesc"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:textColor="#00000000"
        android:id="@+id/mdate"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:textColor="#00000000"
        android:id="@+id/mpid"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:textColor="#00000000"
        android:id="@+id/mfid"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:textColor="#00000000"
        android:id="@+id/hiddentitle"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:textColor="#00000000"
        android:id="@+id/finalhiddentitle"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:textColor="#00000000"
        android:id="@+id/mtype"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:textColor="#00000000"
        android:id="@+id/msid"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:textColor="#00000000"
        android:id="@+id/mid"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:textColor="#00000000"
        android:id="@+id/shname"/>
    <TextView
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:id="@+id/mcat"/>
    <TextView
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:id="@+id/mprice"/>

    <TextView
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:id="@+id/mpricetotal"/>

    <TextView
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:id="@+id/msub"/>

    <TextView
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:id="@+id/mexp"/>

    <TextView
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:id="@+id/mrelstat"/>

    <TextView
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:id="@+id/sesname"/>

    <TextView
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:id="@+id/epname"/>

</RelativeLayout>